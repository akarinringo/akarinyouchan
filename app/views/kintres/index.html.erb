<p id="notice"><%= notice %></p>
<%= link_to "ログイン", kintres_path %>
<%= link_to "新規登録", new_user_registration_path %>
<%= button_to 'ログアウト', destroy_user_session_path, method: :delete %>
<h1>筋トレ</h1>
<h3>筋トレ一覧</h3>
<%= form_tag({controller:"kintres",action:"index"}, method: :get) do %>
  <% Tag.all.each do |t| %>
      <li><%= check_box :tag_ids, t.name %><%= t.name %></li>
  <% end %>
  <%= submit_tag '検索' %>
<% end %>
<%= form_tag({controller:"kintres",action:"index"}, method: :get) do %>
  <%= text_field_tag :tag %>
  <%= submit_tag 'タグを追加' %>
<% end %>

<%= link_to "新規投稿へ", new_kintre_path %>
<% if user_signed_in? %>
<%= link_to "マイページへ", user_path(current_user.id) %>　
<% end %>
<div class="kintres-index">
  <% @trainings.each do |t| %> 
    <div class="kintres-index-content">
      <a href="/users/<%= t.user.id %>"><%= t.user.name %></a>　
      <iframe width="560" height="315" src="https://www.youtube.com/embed/<%= t.youtube_url[32..42] %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
      <%= t.training_content %>
      <%= image_tag t.image_url, size: "250x200" if t.image? %>
      <td><%= t.start_time.strftime("%Y-%m-%d %H:%M") %></td>
      <%= t.user.email %>
      <%= t.created_at %>
    </div>

    <%= link_to "詳細へ", training_path(t.id) %>
    <% if user_signed_in? && current_user.id == t.user_id %> 
      <%= link_to "編集する", edit_kintre_path(t.id) %>
      <%= button_to "削除する", training_path(t.id), method: :delete %>
    <% end %>
  <% end %>
  
</div>

<%= month_calendar events: @trainings do |date, trainings| %>
  <%= date.day %>

  <% trainings.each do |t| %>
    <div>
      <%= link_to t.training_content, @training %>
    </div>
  <% end %>
<% end %>