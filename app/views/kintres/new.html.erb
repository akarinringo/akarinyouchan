<h1>筋トレ</h1>
<h3>筋トレ内容</h3>
<%= form_for @training do |f| %>
  <div class="field">
    <%= f.label :training_content %>
    <%= f.text_field :training_content, :size => 140 %><br>
    <%= f.label :youtube_url %>
    <%= f.text_field :youtube_url, :size => 140 %><br>
  </div>
  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  <div class='form-group'>
        <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
            <div class='form-check'>
                <%= tag.label class: 'form-check-label' do %>
                    <%= tag.check_box class: 'form-check-input' %>
                    <%= tag.text %>
                <% end %>
            </div>
        <% end %>
  </div>
  <div class="time">
    <%= f.label :start_time %>
    <%= f.datetime_select :start_time %>
  </div>
  <%= f.submit "投稿する" %>
<% end %>
<%= link_to "筋トレ一覧に戻る", kintres_path %>