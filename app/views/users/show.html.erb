<h1>users#show</h1>
<%= image_tag @user.image_url, size: "250x200" if @user.image? %>
<p>名前 : <%= @user.name %></p>
<p>メールアドレス : <%= @user.email %></p>
<p>プロフィール : <%= @user.profile %></p>

<% if current_user.id == @user.id %>
  <%= link_to "編集する", edit_user_registration_path %>
<% end %>

<h2>ユーザーの投稿一覧</h2>
<% @user.trainings.each do |t| %>
    <iframe width="560" height="315" src="https://www.youtube.com/embed/<%= t.youtube_url[32..42] %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    <%= t.training_content %>
    <%= image_tag t.image_url, size: "250x200" if t.image? %>
    <%= t.user.email %>
    <%= t.created_at %>
<% end %>

<%= link_to "筋トレ一覧に戻る", kintres_path %>